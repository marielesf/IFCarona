<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="@android:color/white" />

            <stroke
                android:width="1dp"
                android:color="#d2d2d2" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="10dp"
                android:top="0dp" />
        </shape>
    </item>

    <item
        android:left="5dp"
        android:right="5dp">

        <bitmap
            android:gravity="end"
            android:src="@drawable/ic3_arrow" />
    </item>
</layer-list>