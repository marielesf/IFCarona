<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="br.edu.ifrs.canoas.ifcaronasolidaria.fragment.BoasVindasFragment">

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="@string/bem_vindo"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorAccent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="306dp"
        android:layout_height="229dp"
        android:layout_gravity="center"
        android:contentDescription="@string/imageLogo"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/ajude_seu_colega_ofere_a_carona"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textStyle="bold"
        android:visibility="visible" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <Button
            android:id="@+id/btnOferecerCarona"
            android:layout_width="107dp"
            android:layout_height="58dp"
            android:layout_marginEnd="16dp"
            android:text="Oferecer Carona"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBuscarCarona"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051"
            tools:text="Oferecer Carona" />

        <Button
            android:id="@+id/btnBuscarCarona"
            android:layout_width="107dp"
            android:layout_height="58dp"
            android:layout_marginEnd="31dp"
            android:layout_marginStart="16dp"
            android:text="Buscar Carona"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnOferecerCarona"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Buscar Carona" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/pratique_a_sustentabilidade_menos_carros_nas_ruas_significa_menos_emiss_es_e_cidades_mais_limpas_e_saud_veis"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>
