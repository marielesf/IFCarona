<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="br.edu.ifrs.canoas.ifcaronasolidaria.fragment.OfertarCaronaFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Oferecer Carona"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#FF0000"
            android:visibility="visible"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="200dp" />

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="De:"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="82dp" />

        <Spinner
            android:id="@+id/etDe"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/spinner_border"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Para:"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="143dp" />

        <Spinner
            android:id="@+id/etPara"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/spinner_border"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="124dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Horário de saída:"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etHoraSair"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/btnHoraSair"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:padding="15dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Cadastrar"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="415dp" />

    </LinearLayout>

</LinearLayout>
